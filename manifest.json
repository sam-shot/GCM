{
    "manifest_version": 3,
    "name": "Copy n Sync",
    "version": "1.0",
    "description":"Seemlessly copy texts across your devices with a shared clipboard",
    "permissions": [
      "storage",
      "notifications",
      "clipboardRead",
      "clipboardWrite",
      "background",
      "offscreen",
      "gcm"
    ],
    "background": { 
      "service_worker": "background.js",
      "type": "module"
    },
    "icons": {
      "80": "icon.png"
   },
    "action": {
      "default_popup": "app/index.html",
      "default_icon": "icon.png"
    }
  }